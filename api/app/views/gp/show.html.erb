    <!-- This should always be after form until we move to (document).ready -->
    <script type='text/javascript'>

    $(document).ready(function() {

      $('#terms').on('change', function(event) {
        var btn = $(this);
        // console.log(btn.not(':checked'))
        $('#customButton').prop('disabled', !btn.is(':checked'));
      });

      var handler = StripeCheckout.configure({
        key: '<%= @house.stripe_publishable_key %>',
        image: 'https://stripe.com/img/documentation/checkout/marketplace.png',
        locale: 'auto',
        token: function(token) {
          var dates = $('#when').val().split(' au ');
          $.post(
           window.location.origin + '/v1/users.json', {
           token: token.id,
           email: token.email,
           check_in: dates[0],
           check_out: dates[1],
           slug_id: '<%= @house.slug_id %>'})
            .done(function(data) {
              _hsq.push(['identify', {email: token.email, lifecyclestage: 'customer',
                check_in: dates[0],
                check_out: dates[1]}]);
              _hsq.push(['trackPageView']);
              alert('42 x Merci ! Ton paiement a bien √©t√© pris en compte, on te voit tr√®s bient√¥t :-). <%= @house.name %>'); })
            .fail(function (error) {
              alert(error.responseText);
          });
          // POST /transactions?stripe_publishable_key=pk_test_w16a4DTyGylp8oAxNPmfXAqX&token=token.id&stripe_cust_id=?
          // You can access the token ID with `token.id`.
          // Get the token ID to your server-side code for use.
        }
      });

      document.getElementById('customButton').addEventListener('click', function(e) {
        // Open Checkout with further options:
        handler.open({
          name: '<%= "R√©servation #{@house.name}" %>',
          description: "Abonnement mensuel",
          zipCode: false,
          currency: 'eur',
          amount: <%= @house.price_in_cents %>
        });
        e.preventDefault();
      });

      // Close Checkout on page navigation:
      window.addEventListener('popstate', function() {
        handler.close();
      });

    });

    </script>