<table class='table prices'>
  <% house.subscription_items.each do |id, s| %>
  <tr>
    <td><div class='text-left'><%= s[:name] %> <i class="fa fa-question-circle fa-padding" title='<%= t ".plan.#{id}", amount: cents(house.amount_for(id)), users: house.max_users, amount_per_user: cents(house.amount_for_user(id)) -%>'
    data-toggle="tooltip" data-placement="right"></i></div></td>
    <td class='text-right'><%= cents house.amount_for_user(id) %></td>
  </tr>
  <% end %>
  <tr>
    <td><div class='text-left'><strong>Total </strong><small>par mois</small></div></td>
    <td class='text-right'><strong><%= cents house.amount_total_per_user %></strong></td>
  </tr>
</table>

<p>
  <% if house.coupons.any? %>
    <h6>Remises exceptionnelles <i class="fa fa-question-circle fa-padding" title="La remise sera appliquée après validation par la HackerHouse" data-toggle="tooltip" data-placement="right"></i></h6> 
    <p><i><%= house.coupon_to_s %></i></p>
  <% end %>
</p>

