        locale: 'auto',
        token: function(token) {
          var check_in = $('#check_in').val();
          var check_out = $('#check_out').val();

          $.post(
           window.location.origin + '/v1/users.json', {
           token: token.id,
           email: token.email,
           check_in: check_in,
           check_out: check_out,
           slug_id: '<%= @house.slug_id -%>'})
            .done(function(data) {
              // convert local date to utc
              var hsq_in = createDateAsUTC(document.querySelector("#check_in")._flatpickr.selectedDates[0]).getTime();
              var hsq_out = createDateAsUTC(document.querySelector("#check_out")._flatpickr.selectedDates[0]).getTime();

              _hsq.push(['identify', {
                email: token.email,
                lifecyclestage: 'customer',
                check_in: hsq_in,
                check_out: hsq_out,
                hackerhouse_name: '<%= @house.slug_id -%>'
              }]);
              _hsq.push(['trackPageView']);
              alert('42 x Merci ! Ton paiement a bien √©t√© pris en compte, on te voit tr√®s bient√¥t :-). <%= @house.name %>'); })
            .fail(function (error) {
              alert(error.responseText);
          });
          // POST /transactions?stripe_publishable_key=pk_test_w16a4DTyGylp8oAxNPmfXAqX&token=token.id&stripe_cust_id=?
          // You can access the token ID with `token.id`.
          // Get the token ID to your server-side code for use.
        }
      });

      document.getElementById('customButton').addEventListener('click', function(e) {
        // Open Checkout with further options:
        handler.open({
          name: '<%= "R√©servation #{@house.name}" %>',
          description: "Abonnement mensuel",
          zipCode: false,
          currency: 'eur'
        });
        e.preventDefault();
      });

      // Close Checkout on page navigation:
      window.addEventListener('popstate', function() {
        handler.close();
      });

    });

