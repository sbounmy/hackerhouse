<h2><%= @user.firstname %> part le <%= l @user.check_out, format: :pretty -%></h2>

<h3>Si vous ne l'avez pas déjà fais, laissez <%= @user.firstname -%> un petit mot 💌 let's keep in touch <%= @user.phone_number -%></h3>

<table border="0" cellpadding="0" cellspacing="0" class="img-responsive">
  <tbody>
    <tr>
      <td align="left">
        <table border="0" cellpadding="0" cellspacing="0">
          <tbody>
            <tr>
              <td style='width: 50px;padding-right: 10px;'> <img class='avatar' src="<%= @user.avatar_url -%>"/>
              <td>
                <strong><%= @user.firstname -%></strong><br/>
                <%= @user.bio_title -%><br/>
                <%= @user.email -%><br/>
                <%= @user.phone_number -%>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>

<table border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
  <tbody>
    <tr>
      <td class='content-block' align="center">
        <table border="0" cellpadding="0" cellspacing="0">
          <tbody>
            <tr>
              <td> <a href="<%= @user.bio_url -%>" target="_blank">Recommander <%= @user.firstname -%> sur Linkedin 👍</a> </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>
<hr/>

<% if @next %>
  <p>Prochain départ :</p>
  <table border="0" cellpadding="0" cellspacing="0" class="">
    <tbody>
      <tr>
        <td align="left">
          <table border="0" cellpadding="0" cellspacing="0">
            <tbody>
              <tr>
                <td><%= @next.firstname -%></td>
              </tr>
            </tbody>
          </table>
        </td>
        <td align="right">
          <table border="0" cellpadding="0" cellspacing="0">
            <tbody>
              <tr>
                <td><strong><%= "dans #{time_ago_in_words(@next.check_out)}" -%></strong><i> (<%= l(@next.check_out, format: :long) -%>)</i></td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
<hr/>